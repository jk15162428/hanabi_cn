// The configuration file for TypeScript.
// This file is not used in compilation. It is here just for a nice editor experience.
{
  "extends": [
    // We extend the base IsaacScript config:
    // https://github.com/IsaacScript/isaacscript/blob/main/packages/isaacscript-tsconfig/configs/tsconfig.base.json
    "isaacscript-tsconfig/tsconfig.base.json",

    // We extend the standard Docusaurus config:
    // https://github.com/tsconfig/bases/blob/main/bases/docusaurus.json
    "@tsconfig/docusaurus/tsconfig.json",
  ],

  // https://www.typescriptlang.org/docs/handbook/compiler-options.html
  "compilerOptions": {
    "baseUrl": ".",
  },

  // We want to lint every file in the repository.
  "include": [
    "./**/*.js",
    "./**/.*.js",
    "./**/*.cjs",
    "./**/.*.cjs",
    "./**/*.mjs",
    "./**/.*.mjs",
    "./**/*.jsx",
    "./**/.*.jsx",
    "./**/*.ts",
    "./**/.*.ts",
    "./**/*.cts",
    "./**/.*.cts",
    "./**/*.mts",
    "./**/.*.mts",
    "./**/*.tsx",
    "./**/.*.tsx",
  ],
}
